<!-- ----------------------------------------------------------------------------------------------------- twbs-span -->
<section>
  <div class="container">
    <div class="page-header">
      <h2><code>\{{twbs-span}}</code></h2>
    </div>
    <div class="row">
      <div class="col-sm-4 form-group">
        {{#twbs-span placement="bottom" title="Some sort of span title"}}
          Hover over this span to checkout the default Bootstrap tooltip.
        {{/twbs-span}}
      </div>
      <div class="col-sm-8">
        {{!-- @formatter:off --}}
<pre>\{{#twbs-span placement="bottom" title="Some sort of span title"}}
  Hover over this span to checkout the default Bootstrap tooltip.
\{{/twbs-span}}
</pre>
        {{!-- @formatter:on --}}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4 form-group">
        {{#twbs-span placement="right" as |span|}}
          Hover For Dynamic Content
          {{#span.title}}
            {{clock.hour}}:{{clock.minute}}:{{clock.second}}
          {{/span.title}}
        {{/twbs-span}}
      </div>
      <div class="col-sm-8">
        {{!-- @formatter:off --}}
<pre>\{{#twbs-span placement="right" as |span|}}
  Hover For Dynamic Content
  \{{#span.title}}
    \{{clock.hour}}:\{{clock.minute}}:\{{clock.second}}
  \{{/span.title}}
\{{/twbs-span}}
</pre>
        {{!-- @formatter:on --}}
      </div>
    </div>
  </div>
</section>

<!-- ----------------------------------------------------------------------------------------------------- twbs-time -->
<section>
  <div class="container">
    <div class="page-header">
      <h2><code>\{{twbs-time}}</code></h2>
    </div>
    <div class="row">
      <div class="col-sm-4 form-group">
        {{#twbs-time
          datetime=model.timeDemoISOString html?=true placement="bottom"
          title=(
            concat "The <code>datetime</code> attribute of this <code>time</code> element is set to "
            model.timeDemoISOString
          )
        }}
          {{model.timeDemoString}}
        {{/twbs-time}}
      </div>
      <div class="col-sm-8">
        {{!-- @formatter:off --}}
<pre>\{{#twbs-time
  datetime=model.timeDemoISOString html?=true placement="bottom"
  title=(
    concat "The <code>datetime</code> attribute of this <code>time</code> element is set to "
    model.timeDemoISOString
  )
}}
  \{{model.timeDemoString}}
\{{/twbs-time}}
</pre>
        {{!-- @formatter:on --}}
      </div>
    </div>
  </div>
</section>
